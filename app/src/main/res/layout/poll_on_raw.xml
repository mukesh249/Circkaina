<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:visibility="gone"
        android:layout_marginBottom="30dp"
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="6dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:visibility="gone"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Indian premier League 2019, 22 March"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:text="08:00 pm 08-Apr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:gravity="center|start"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    app:civ_border_width="1.0dp"
                                    app:civ_border_color="@color/colorWhite"
                                    android:src="@drawable/logo"
                                    android:minWidth="40dp"
                                    android:minHeight="40dp"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp" />
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/colorBlack"
                                    android:text="Team dfgs dfgdfg"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:visibility="gone"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/colorRed"
                                    android:text="Upcoming"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/colorBlack"
                                    android:text="Vs"
                                    android:textSize="12sp"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:gravity="center|end"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    app:civ_border_width="1.0dp"
                                    app:civ_border_color="@color/colorWhite"
                                    android:src="@drawable/logo"
                                    android:minWidth="40dp"
                                    android:minHeight="40dp"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp" />
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/colorBlack"
                                    android:text="Team dfgdgd dfgg"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Who will Win ?"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RelativeLayout
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:padding="7dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/borderroundshapegrey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:layout_centerVertical="true"
                                android:id="@+id/option_a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="15dp"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:text="KKR"
                                android:textColor="@color/colorPrimary"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/option_a"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:padding="7dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/borderroundshapegrey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:layout_centerVertical="true"
                                android:id="@+id/option_b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="15dp"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:text="RCB"
                                android:textColor="@color/colorPrimary"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/option_b"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:padding="7dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/borderroundshapegrey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:layout_centerVertical="true"
                                android:id="@+id/option_c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="15dp"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:text="Tie"
                                android:textColor="@color/colorPrimary"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/option_c"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <Button
                            android:id="@+id/submit_btn"
                            android:layout_marginBottom="20dp"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="Submit"
                            android:background="@drawable/buttonyellow"
                            android:layout_marginTop="30dp"
                            android:layout_width="150dp"
                            android:layout_height="45dp" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:gravity="center"
            android:rotation="-45">
            <com.github.florent37.shapeofview.shapes.CutCornerView
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="80dp"
                android:layout_height="86dp"
                app:shape_cutCorner_topLeftSize="20dp"
                app:shape_cutCorner_topRightSize="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:text="SUN"
                    android:textColor="@color/colorBlack"
                    android:textSize="9sp" />
            </com.github.florent37.shapeofview.shapes.CutCornerView>


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bar_chart_rel"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/fdsafsa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="6dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:visibility="gone"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="Indian premier League 2019, 22 March"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:text="08:00 pm 08-Apr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:gravity="center|start"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    app:civ_border_width="1.0dp"
                                    app:civ_border_color="@color/colorWhite"
                                    android:src="@drawable/logo"
                                    android:minWidth="40dp"
                                    android:minHeight="40dp"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp" />
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/colorBlack"
                                    android:text="Team1"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:visibility="gone"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/colorRed"
                                    android:text="Upcoming"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/colorBlack"
                                    android:text="Vs"
                                    android:textSize="12sp"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:gravity="center|end"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    app:civ_border_width="1.0dp"
                                    app:civ_border_color="@color/colorWhite"
                                    android:src="@drawable/logo"
                                    android:minWidth="40dp"
                                    android:minHeight="40dp"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp" />
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/colorBlack"
                                    android:text="Team2"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_margin="10dp"
                        android:background="@color/colorLightGrey"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>
                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_below="@+id/fdsafsa"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="PREDICTIONS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginBottom="20dp"
                                    android:gravity="center"
                                    android:id="@+id/precents1_tv"
                                    android:text="40%"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <ProgressBar
                                    android:progress="40"
                                    android:id="@+id/vprogressbar1"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minHeight="150dp"
                                    android:progressDrawable="@drawable/progressbar"/>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:id="@+id/team1_name_tv"
                                    android:text="Team1"
                                    android:textAllCaps="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginBottom="20dp"
                                    android:gravity="center"
                                    android:id="@+id/precents2_tv"
                                    android:text="60%"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <ProgressBar
                                    android:progress="60"
                                    android:id="@+id/vprogressbar2"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minHeight="150dp"
                                    android:progressDrawable="@drawable/progressbar2"/>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:id="@+id/team2_name_tv"
                                    android:text="Team2"
                                    android:textAllCaps="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginBottom="20dp"
                                    android:gravity="center"
                                    android:id="@+id/precents_tv"
                                    android:text="20%"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <ProgressBar
                                    android:progress="20"
                                    android:id="@+id/vprogressbar3"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minHeight="150dp"
                                    android:progressDrawable="@drawable/progressbar3"/>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:id="@+id/team_name_tv"
                                    android:text="Tie"
                                    android:textAllCaps="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/colorPrimaryDark"
                            android:text="Total Votes: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textColor="@color/colorPrimaryDark"
                            android:text="35006"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginStart="30dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="My Poll: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textColor="@color/colorGreen"
                            android:text="Team2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:gravity="center"
            android:rotation="-45">
            <com.github.florent37.shapeofview.shapes.CutCornerView
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="80dp"
                android:layout_height="86dp"
                app:shape_cutCorner_topLeftSize="20dp"
                app:shape_cutCorner_topRightSize="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:text="SUN"
                    android:textColor="@color/colorBlack"
                    android:textSize="9sp" />
            </com.github.florent37.shapeofview.shapes.CutCornerView>


        </LinearLayout>

    </RelativeLayout>



</LinearLayout>