<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="2dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingStart="20dp"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:padding="7dp"
            android:id="@+id/rankin_col_a"
            android:text="1"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_toEndOf="@+id/rankin_col_a"
            android:layout_toStartOf="@+id/rate_col_a"
            android:id="@+id/player_col_a"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:padding="7dp"
            android:text="Mukesh vema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/rate_col_a"
            android:layout_toStartOf="@+id/point_col_a"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:padding="7dp"
            android:text="1000"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/point_col_a"
            android:paddingEnd="20dp"
            android:layout_alignParentEnd="true"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"
            android:padding="7dp"
            android:gravity="center"
            android:text="500"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>