<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.github.florent37.shapeofview.shapes.CutCornerView
            android:id="@+id/clipCorner"
            android:background="@drawable/dhoni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shape_cutCorner_bottomRightSize="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/image"
                android:src="@drawable/dhoni"
                android:scaleType="fitXY"
                />
        </com.github.florent37.shapeofview.shapes.CutCornerView>


        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_news"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center|start"
                android:text="Indian premier League 2019, 22 March"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/description_news"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text="08:00 pm 08-Apr skdfsdfisdf sfdeisfd sdfifsdfksdjf sdfisd fdsfiosdjf sdfk;s jfsdfios adfsdkf jsdafskadfj sdfsklf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/post_time"
                android:text="2 days ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>